<div class="modal-dialog modal-lg modal-dialog-center">
  <div class="modal-content">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
  <div class="modal-body">
    <div class="row">
      <% @users.each do |user|%>
        <% if @attendance.month_check == "0" %>
          <div class="col-md-12">
            <h3>【<%= user.name %>からの1ヶ月分の勤怠申請 <%= user.superior %>】</h3>
            <table class="table table-condensed table-bordered table-hover">
              <thead>
                <tr>
                  <th class="center">月</th>
                  <th class="center">指示者確認<%= "\u329e" %></th>
                  <th class="center">変更</th>
                  <th class="center">勤怠を確認する</th>
                </tr>
              </thead>
              <% @attendances.each do |month|%>
                <%= fields_for "attendances[]", month do |attendance| %>
                  <tbody>
                    <tr>
                      <td><%= month.worked_on %></td>
                      <td>
                        <div class="application-form">
                         <div class="form-group">
                           <select class="form-control" id="application" name="application">
                             <option></option>
                             <option></option>
                           </select>
                         </div>
                        </div>
                      </td>
                      <td class="center"><%= check_box_tag :sample %></td>
                      <td class="center"><%= link_to "確認", '#', class: "btn btn-lg btn-primary" %></td>
                    </tr>
                  </tbody>
                <% end %>
              <% end %>
            </table>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
  <div class="col-md-4 col-md-offset-4">
    <%= link_to "変更を送信する", '#', class: "btn btn-lg btn-primary btn-block" %>
  </div>
</div>
