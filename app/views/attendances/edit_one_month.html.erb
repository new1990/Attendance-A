<% provide(:title, @user.name) %>
<div>
  <h1>勤怠編集</h1>
  <table class="table table-bordered table-condensed table-striped table-hover" id="table-attendances">
    <thead>
      <tr>
        <th>日付</th>
        <th>曜日</th>
        <th>出社</th>
        <th>退社</th>
        <th>翌日</th>
        <th>在社時間</th>
        <th>備考</th>
        <th>指示者確認&#x329E;</th>
      </tr>
    </thead>
    <tbody>
      <% @attendances.each do |day| %>
        <tr>
          <td><%= l(day.worked_on, format: :short) %></td>
          <td>
            <% if day.worked_on.wday == 0 %>
              <font color="#ff000">
            <% elsif day.worked_on.wday == 6 %>
              <font color="#0033cc">
            <% end %>
            <%= $days_of_the_week[day.worked_on.wday] %>
          </td>
          <td></td>
          <td></td>
          <td></td>
          <td></td>
          <td></td>
          <td></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div class="center">
    <%= link_to "キャンセル", user_path(date: @first_day), class: "btn btn-primary" %>
  </div>
</div>